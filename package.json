{
  "name": "crx-server",
  "module": "index.ts",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "startServer": "tsx index.ts --srcExtensionDir <string> --updateUrl <string> --privateKeyPath <string> --dstDir <string> --enableOverridingManifest --hotReload <string> --hostname <string> --port <number> --compileOnStart true",
    "startServerFromEnv": "tsx index.ts --loadFromEnvFile",
    "dev": "tsx watch index.ts --loadFromEnvFile",
    "startTunnel": "ssh -R crx-server.serveo.net:80:localhost:8001 serveo.net",
    "test": "vitest"
  },
  "bin": {
    "crx-server": "./index.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "async-mutex": "^0.5.0",
    "change-case": "^5.4.4",
    "crx": "^5.0.1",
    "dotenv": "^16.4.5",
    "hono": "^4.5.5",
    "node-rsa": "^1.1.1",
    "p-debounce": "^4.0.0",
    "typescript": "^5.5.4",
    "zod": "^3.23.8",
    "zod-opts": "^0.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/node": "^22.3.0",
    "@types/node-rsa": "^1.1.4",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "tsx": "^4.17.0",
    "typescript-eslint": "^8.1.0",
    "vitest": "^2.0.5"
  }
}
